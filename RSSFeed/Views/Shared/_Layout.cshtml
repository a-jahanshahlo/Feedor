<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - خوراک خوان</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body dir="rtl">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


                <a href="@Url.Action("Index", "Home")" class="navbar-brand" rel="home" href="#" title="Brand">
                    <img src="@Url.Content("~/content/images/Logo24.png")" width="50" height="50" style=" margin-top: -15px;" />

                </a>@Html.ActionLink("خوراک خوان", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("NewUrl", "Sites")"><i class="fa fa-plus "></i> خوراک جدید </a></li>
                    <li><a href="@Url.Action("About", "Home")"><i class="fa fa-info-circle "></i> درباره ما </a></li>
                    <li><a href="@Url.Action( "Contact", "Home")"><i class="fa fa-phone "></i> تماس با ما </a>  </li>
                    <li><a href="@Url.Action("Index", "Item")"><i class="fa fa-star "></i> مطالب منتخب من</a></li>
                    <li class="dropdown">
                        <a id="drop1" href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" role="button" aria-expanded="false">
                            <i class="fa fa-navicon "></i> ناحیه کاربری من
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="drop1">
                            <li role="presentation"><a data-toggle="modal" data-target="#myUploadModal" role="menuitem" tabindex="-1" ><i class="fa fa-upload "></i>  ارسال فایل OPML</a></li>
                            <li role="presentation"><a href="@Url.Action("DownloadOpml", "File")"  role="menuitem" tabindex="-1"><i class="fa fa-download "></i> دریافت فایل OPML</a></li>
                           
                            <li role="presentation" class="divider"></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="@Url.Action("List", "Sites")"><i class="fa fa-list "></i> لیست خوراک ها</a></li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class=" container-full">

        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - خوراک خوان</p>
        </footer>
    </div>
    
    <div class="modal fade" id="myUploadModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">ارسال فایل OPML</h4>
                </div>
                <div class="modal-body">
                  
                    <span class="btn btn-success fileinput-button btn-file">
                        <i class="glyphicon glyphicon-plus"></i>
                        <span>افزودن فایل...</span>
                        <input id="fileupload" type="file" name="files[]" multiple>
                    </span>
                    <br />
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                            <span class="sr-only">0% complete</span>
                        </div>
                    </div>
                    @*<br />*@
                    <div id="filename" class="file_name"></div>
                    @*<br />
                    <div class="file_type"></div>
                    <br />
                    <div class="file_size"></div>*@


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">بستن</button>
                   
                </div>
            </div>
        </div>
    </div>
    
  
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jstree")
    @Scripts.Render("~/bundles/splitter")
    @Scripts.Render("~/bundles/fileupload")

    @Scripts.Render("~/bundles/custom")
    @RenderSection("scripts", required: false)

</body>
</html>
